{
  "compilerOptions": {
    "declaration": true,
    "noImplicitAny": true,
    "skipLibCheck": true,
    "importHelpers": true,
    "moduleResolution": "node",
    "module": "CommonJS",
    "outDir": "lib",
    "rootDir": "src",
    "strict": true,
    "target": "ES2020",
    "esModuleInterop": true,
    "types": ["node"]
  },
  "include": [
    "src/**/*"
  ]
}