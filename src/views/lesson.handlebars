<section class="hero is-info">
  <div class="hero-body">
    <div class="container">
      <h1 class="title">
        {{course.title}}
      </h1>
      <h1 class="subtitle">
        <span class="icon">
          <a href="/courses/{{course.id}}">
            <i class="fas fa-arrow-left"></i>
          </a>
        </span>
        {{lesson.title}}
      </h1>
    </div>
  </div>
</section>
<section class="hero">
  <div class="hero-body">
    <div class="container">
      <div class="columns">
        <div class="column is-three-fifths">
          <video width="100%" controls autoplay src="https://cloud.mail.ru/public/eKAE/QwDjrwm3F">Видео урока</video>
        </div>
        <div class="column content">
          <p>{{description}}</p>
          {{#if lesson.resources}}
          <h1 class="title is-5">Ресурсы</h1>
          <ul>
            {{#each lesson.resources}}
            <li><a href="{{link}}" target="_blank">{{title}}</a></li>
            {{/each}}
          </ul>
          {{/if}}
        </div>
      </div>
      <div class="column">
        <h1 class="title is-5">Комментарии</h1>
        <div class="media">
          <figure class="media-left">
            <p class="image is-64x64 is-info">
              <img src="https://bulma.io/images/placeholders/128x128.png" alt="">
            </p>
          </figure>
          <div class="media-content">
            <form class="box" method="post" action="">
              <div>
                <div class="field">
                  <div class="control">
                    <textarea name="comments" class="textarea" type="text" id="comment-text"
                      placeholder="Добавить комментарий..." rows="2"></textarea>
                  </div>
                </div>
                <div class="control">
                  <input class="button is-success" id="comment-button" type="submit" value="Оставить комментарий" />
                </div>
              </div>
            </form>
          </div>
        </div>
        {{#each lesson.comments}}
        <div class="media">
          <figure class="media-left">
            <p class="image is-64x64 is-info">
              <img src="https://bulma.io/images/placeholders/128x128.png" alt="">
            </p>
          </figure>
          <div class="media-content">
            <div>
              <p>
                <strong>{{author}}</strong> <small>{{date}}</small>
                <br>
                {{text}}
              </p>
            </div>
          </div>
        </div>
        {{/each}}
      </div>
    </div>
  </div>
</section>